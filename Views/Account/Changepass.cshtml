@{
    ViewBag.Title = "Changepass";
    Layout = "~/Views/Shared/_Trangchu.cshtml";
}
<head>
    <link rel="stylesheet" href="~/assets/css/account.css">
</head>
<div class="container">
    <div class="container__forgot-password container__change-password">
        <h1><img src="~/assets/img/Logo.png" alt="Logo" class="logo"></h1>

        <h2>Thay đổi mật khẩu</h2>
        <form id="change-password-form" action="@Url.Action("Changepass", "Account")" method="post">
            <div class="form-group">
                <input type="password" id="current-password" name="matkhau" required placeholder="Nhập mật khẩu hiện tại của bạn">
                <span class="error-message">@ViewBag.ErrorMessage</span>
            </div>
            <div class="form-group">
                <input type="password" id="new-password" name="matkhaunew" required placeholder="Nhập mật khẩu mới của bạn">
                <span class="error-message">@ViewBag.ErrorMessage2</span>
            </div>
            <div class="form-group">
                <input type="password" id="confirm-password" name="confirmPassword" required placeholder="Xác nhận lại mật khẩu">
                <span class="error-message">@ViewBag.ErrorMessage3</span>
            </div>
            <button class="changbtn" type="submit">Tiếp Theo</button>
        </form>
    </div>
</div>
